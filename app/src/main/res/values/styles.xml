<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.AppBarLayout" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.AppBar" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextColor">@color/primaryText</item>
        <item name="subtitleTextColor">@color/primaryText</item>
        <item name="colorControlNormal">@color/primaryText</item>
        <item name="android:actionMenuTextColor">@color/primaryText</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/primaryText</item>
        <item name="android:textColorHint">@color/primaryText</item>
        <item name="actionMenuTextColor">@color/primaryText</item>
    </style>

    <style name="AppTheme.AppBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseCard" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="ActivityCard" parent="BaseCard">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="BaseCardContainer" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ActivityCardContainer" parent="BaseCardContainer">
        <item name="android:minHeight">100dp</item>
    </style>


</resources>
