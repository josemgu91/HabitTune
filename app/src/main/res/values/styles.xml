<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AppBarLayout" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.AppBar" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextColor">@color/primaryText</item>
        <item name="subtitleTextColor">@color/primaryText</item>
        <item name="colorControlNormal">@color/primaryText</item>
    </style>

    <style name="AppTheme.AppBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
